# App
PYTHONPATH=.
ENV=local


# MLflow
MLFLOW_TRACKING_URI=file:./mlflow_artifacts
MLFLOW_EXPERIMENT=EnterpriseKnowledgeAgent
MLFLOW_REGISTERED_MODEL=EKA_RAG_Index


# Airflow (only for quick local demo; Airflow uses envs inside container anyway)
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# LLM usage (optional)
USE_OPENAI=false
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_INPUT_TOKENS=6000
OPENAI_MAX_OUTPUT_TOKENS=400
OPENAI_TEMPERATURE=0.2

# Local daily guardrail (approximate, in USD). Set tiny for demos.
OPENAI_MAX_DAILY_USD=0.50